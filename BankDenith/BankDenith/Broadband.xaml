<Window x:Class="BankDenith.Broadband"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDenith"
        mc:Ignorable="d"
        Title="Broadband" Height="600" Width="1050">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="395" VerticalAlignment="Center" Width="850" Background="#FF99A5BB">
            <Label HorizontalAlignment="Left" Margin="93,61,0,0" VerticalAlignment="Top" FontFamily="Lucida Bright" FontSize="16" Content="Enter Broadband Account Number"/>
            <Label HorizontalAlignment="Left" Margin="93,197,0,0" VerticalAlignment="Top" Content="Enter the Amount" FontFamily="Lucida Bright" FontSize="16"/>
            <TextBox x:Name="txtBroadband" HorizontalAlignment="Left" Margin="195,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16"/>
            <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Margin="195,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16"/>
            <Button Margin="649,340,131,0" VerticalAlignment="Top" Height="30" Background="#FF687384" FontFamily="Lucida Bright" FontSize="16" Content="Back" Click="Button_Click"/>
            <Button Content="Pay" HorizontalAlignment="Left" Margin="754,340,0,0" VerticalAlignment="Top" Width="70" Height="30" Background="#FF687384" FontFamily="Lucida Bright" FontSize="16" Click="Button_Click_1"/>
        </Grid>

    </Grid>
</Window>

<Window x:Class="BankDenith.BillPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDenith"
        mc:Ignorable="d"
            Title="BillPayment" Height="600" Width="1050">
    <Grid x:Name="frmBillPayment">
        <Grid.Background>
            <ImageBrush ImageSource="/WhatsApp Image 2025-03-29 at 21.42.03_d5da2e75.jpg"/>
        </Grid.Background>
        <Rectangle Width="850" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="#FF99A5BB" Margin="0,0,0,0" Opacity="0.33"/>
        <Label Style="{StaticResource MainTitles}" Content="Bill Payment" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFC3D5DC"/>
        <Label Style="{StaticResource LoginPageLables}" Content="Bill Type" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="137,153,0,0" FontFamily="Lucida Bright" FontSize="20" FontWeight="Bold" Height="38"/>
        <Label Style="{StaticResource LoginPageLables}" Content="Telecomunication" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="116,228,0,0" RenderTransformOrigin="0.499,0.535" FontFamily="Lucida Bright" FontSize="16"/>
        <Label Style="{StaticResource LoginPageLables}" Content="Utility" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="147,348,0,0" RenderTransformOrigin="0.512,0.535" FontFamily="Lucida Bright" FontSize="16"/>
        <ComboBox x:Name="MyComboBox1" Style="{StaticResource userCtrlComBox}" Margin="389,228,0,0" Width="230" SelectionChanged="MyComboBox1_SelectionChanged" FontFamily="Lucida Bright" FontSize="16" Cursor="Hand">
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Mobile"/>
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Broadband"/>
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Television"/>
        </ComboBox>
        <ComboBox x:Name="MyComboBox2" Style="{StaticResource userCtrlComBox}" Margin="389,348,0,0"  Width="230" SelectionChanged="ComboBox_SelectionChanged" FontFamily="Lucida Bright" FontSize="16" Cursor="Hand">
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Electricity Bill"/>
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Water Bill"/>
            <ComboBoxItem FontFamily="Lucida Bright" FontSize="16" Content="Other Bills"/>
        </ComboBox>
        <Button Style="{StaticResource PageBtn}" Content="Back" HorizontalAlignment="Left" Margin="860,446,0,0" VerticalAlignment="Top" ButtonBase.Click="Button_Click" FontFamily="Lucida Bright" FontSize="16" Cursor="Hand"/>

    </Grid>
</Window>

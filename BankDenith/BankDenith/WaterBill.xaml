<Window x:Class="BankDenith.WaterBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDenith"
        mc:Ignorable="d"
        Title="WaterBill" Height="600" Width="1050">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="395" VerticalAlignment="Center" Width="850" Background="#FF99A5BB">
            <Label HorizontalAlignment="Left" Margin="93,61,0,0" VerticalAlignment="Top" Content="Enter Water Bill Account Number" FontFamily="Lucida Bright" FontSize="16"/>
            <Label HorizontalAlignment="Left" Margin="93,197,0,0" VerticalAlignment="Top" Content="Enter the Amount" FontFamily="Lucida Bright" FontSize="16"/>
            <TextBox x:Name="txtWaterBill" HorizontalAlignment="Left" Margin="195,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16"/>
            <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Margin="195,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16"/>
            <Button HorizontalAlignment="Left" Margin="648,340,0,0" VerticalAlignment="Top" Width="70" Height="30" Background="#FF687384" FontFamily="Lucida Bright" FontSize="16" Content="Back" Click="Button_Click"/>
            <Button Content="Pay" HorizontalAlignment="Left" Margin="757,340,0,0" VerticalAlignment="Top" Width="70" Height="30" FontFamily="Lucida Bright" FontSize="16" Background="#FF687384" Click="Button_Click_1"/>
        </Grid>

    </Grid>
</Window>

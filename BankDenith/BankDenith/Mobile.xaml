<Window x:Class="BankDenith.Mobile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDenith"
        mc:Ignorable="d"
        Title="Mobile" Height="600" Width="1050">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/WhatsApp Image 2025-03-29 at 21.42.03_d5da2e75.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Height="395" VerticalAlignment="Center" Width="850" Background="#FF99A5BB" Opacity="0.775">
            <Label HorizontalAlignment="Left" Margin="93,61,0,0" VerticalAlignment="Top" Content="Enter Mobile Number" FontFamily="Lucida Bright" FontSize="16" FontWeight="Bold"/>
            <Label HorizontalAlignment="Left" Margin="93,197,0,0" VerticalAlignment="Top" Content="Enter the Amount" FontFamily="Lucida Bright" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="txtMobileNo" HorizontalAlignment="Left" Margin="195,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16" Background="White"/>
            <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Margin="195,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="30" FontFamily="Lucida Bright" FontSize="16"/>
            <Button Content="Pay" HorizontalAlignment="Left" Margin="751,340,0,0" VerticalAlignment="Top" Width="70" Height="30" Background="#FF687384" FontFamily="Lucida Bright" FontSize="16" Click="Button_Click_1"/>
            <Button Content="Back" HorizontalAlignment="Left" Margin="659,340,0,0" VerticalAlignment="Top" Width="70" Height="30" FontFamily="Lucida Bright" FontSize="16" Background="#FF687384" Click="Button_Click_2"/>
        </Grid>

    </Grid>
</Window>
